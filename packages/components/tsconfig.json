{
  "compilerOptions": {
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "paths": {
      "src/*": ["src/*"]
    },
    "outDir": "./dist/",
    "sourceMap": true,
    "module": "commonjs",
    "removeComments": true,
    "baseUrl": "./",
    "sourceRoot": "src",
    "lib": ["dom", "esnext.asynciterable"],
    "target": "es6",
    "importHelpers": true,
    "jsx": "react",
    "allowJs": true,
    "declaration": true,
    "declarationDir": "./dist/",
    "declarationMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true
  }
}
